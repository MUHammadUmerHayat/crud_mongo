<html>
    <head>
        <title>CRUD (mongo) - Entry Page</title>
    </head>
    <body>
        <center>
            <h1 style='color:blue'>--* UPDATE  PAGE *--</h1>
            <hr>
            <a href='/'><span style='color:chocolate'>Home</span></a> &nbsp; &nbsp;
            <a href='/shop/entry'><span style='color:chocolate'>Entry</span></a> &nbsp; &nbsp;
            <a href='/shop/show'><span style='color:chocolate'>Show</span></a>
            <hr>
            <form action='/shop/update' method='POST'>
            <table border='2px'>
                <tr>
                    <th>S id</th>
                    <td><input type='hidden' name='_id' value='<%= id%>'><%= id%></td>
                 <!-- <td><%= id%></td> -->
                </tr>

                <tr>
                    <th>Name : </th>
                    <td><input type='text' name='sname' value='<%= name%>'></td>
                </tr>

                <tr>
                    <th>Department : </th>
                    <td><select name='dept'>
                        <option> <%= dep%> </option>
                        <option> Gents </option>
                        <option> Ladies </option>
                        <option> Kids </option>
                        <option> School </option>
                        <option> Rajsthani </option>
                    </select></td>
                </tr>

                <tr>
                    <th>Salary : </th>
                    <td><input type='number' name='salary' value='<%= sal%>'></td>
                </tr>

                <tr>
                    <th colspan='2'>
                        <button type='submit'>Update</button>
                    </th>
                </tr>
            </table>
        </form>
        </center>
    </body>
</html>